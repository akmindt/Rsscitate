<div id="wrapper">
	<div id="header-wrapper">
		<div id="header" class="container">
			<div id="logo">
				<h1><a href='../users/1'><%= image_tag("templogo.png") %></a></h1>
			</div>
			<div id="menu">
				
			</div>
		</div>
	</div><!-- End Header-->

	<div id="page">
		<div id="feed-content-wrapper">
			<div id="feed-bg">
			<a href='../feeds/new'>Create A New Feed</a>
				<div class="feed-content">
					<% if @column1.empty? && @column2.empty? %>
						<h3>There's nothing to display here :(</h3>
					<% else %>
					<div id="column1">
						<% @column1.length.times do |x| %>
							<a href=../articles/<%= @column1[x - 1].id %>><h2 class="title"><%= @column1[x - 1].title %></h2><br></a>
							<div class="fbox1">
								<p><%= @column1[x - 1].summary.html_safe %></p>
							</div>
							<br>
						<% end %>
					</div>

					<div id="column2">
						<% @column2.length.times do |x| %>
							<a href=../articles/<%= @column2[x - 1].id%>><h2 class="title"><%= @column2[x - 1].title %></h2><br></a>
							<div class="fbox2">
								<p><%= @column2[x - 1].summary.html_safe %></p>
							</div>
							<br>
						<% end %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
		<!-- end #content -->
		<div id="user-sidebar">

			<div id="usertools">
				<%= image_tag("userImg.jpg") %>
				<a href='../users/1'><p><%= @user.name %></p></a>
			</div>
			
			<div id="logout">
				<a href="index.html">Logout</a>
			</div>
			<br><br>
			<div id="userfeeds">
				<%= render partial: "feeds/list" %>
			</div>
		</div>
		<!-- end #sidebar -->
		<div style="clear: both;">&nbsp;</div>
	</div>
	<!-- end #page --> 
	
</div>
<div id="footer">
	<p>Copyright (c) 2013 Sitename.com. All rights reserved.</p>
</div>
<!-- end #footer -->